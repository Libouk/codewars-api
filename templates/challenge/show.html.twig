<!DOCTYPE html>

<title>Challenge</title>

{% block body %}
    <h1>Challenge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ challenge.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ challenge.title }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ challenge.shortDescription }}</td>
            </tr>
            <tr>
                <th>FullDescription</th>
                <td>{{ challenge.fullDescription }}</td>
            </tr>
            <tr>
                <th>Example</th>
                <td>{{ challenge.example }}</td>
            </tr>
            <tr>
                <th>Solution</th>
                <td>{{ challenge.solution }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('challenge_index') }}">back to list</a>

    <a href="{{ path('challenge_edit', {'id': challenge.id}) }}">edit</a>

    {{ include('challenge/_delete_form.html.twig') }}
